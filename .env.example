# Valhalla Orchestrator V2 - Environment Configuration
# Copy this file to .env and fill in your values
# WARNING: Never commit .env to git!

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# GCP Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Your GCP Project ID (required)
GCP_PROJECT_ID=your-project-id

# GCP Region for Vertex AI (default: us-central1)
GCP_REGION=us-central1

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Vertex AI Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Claude model version (default: claude-3-5-sonnet@20240620)
CLAUDE_MODEL=claude-3-5-sonnet@20240620

# Generation parameters
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.7

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Application Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Application name
APP_NAME=Valhalla AI Hub

# Enable debug mode (true/false)
DEBUG_MODE=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Firestore Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL=300

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Optional: Local Development
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Path to service account key (for local development only)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Streamlit server port (default: 8080)
# PORT=8080

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Notes
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# For Cloud Run deployment, set environment variables using:
# gcloud run services update valhalla-ai-hub \
#   --set-env-vars GCP_PROJECT_ID=your-project-id,GCP_REGION=us-central1

# For local development with service account:
# 1. Create a service account in GCP Console
# 2. Download the JSON key file
# 3. Set GOOGLE_APPLICATION_CREDENTIALS to the path
# 4. Grant necessary roles:
#    - Vertex AI User
#    - Cloud Datastore User
#    - Logs Writer
